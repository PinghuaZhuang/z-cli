{
  "compilerOptions": {
    "target": "esnext",
    "module": "commonjs",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "importHelpers": true,
    "jsx": "react",
    "esModuleInterop": true,
    "sourceMap": true,
    "baseUrl": "./",
    "strict": true,
    "paths": {
      "@/*": [
        "src/*"
      ]
    },
    "allowSyntheticDefaultImports": true,
    "types": ["node"]
  },
  "exclude": [
    "node_modules",
    "dist",
    "**/__test__",
    "test",
    "docs",
    "tests"
  ],
  "include": [
    "typings.d.ts",
    "src/**/*",
    "tsconfig.actions.json"
  ]
}
